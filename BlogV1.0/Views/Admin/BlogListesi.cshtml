@using EntityLayer.Concrete
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<Blog>
@{
    ViewData["Title"] = "BlogListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
  <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Blog Tablosu</h5>
			  <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Tarih</th>
                    <th scope="col">Kategori</th>
                    <th scope="col">Yazar</th>
                    <th scope="col">Güncelle</th>
                    <th scope="col">Sil</th>
                    <th scope="col">Detaylar</th>
                  </tr>
                </thead>
                <tbody>
                    @foreach(var x in Model){
                  <tr>
                    <td>@x.BlogID</td>
                    <td>@x.BlogTitle</td>
                    <td>@x.BlogDate</td>
                    <td>@x.category.CategoryName</td>
                    <td>@x.writer.WriterName</td>
                    <td><a href="~/Admin/Guncelle/@x.BlogID" class="btn btn-outline-success btn-fw btn-icon-text">Güncelle <i class="zmdi zmdi-arrow-right"></i></a></td>
                    <td><a href="~/Admin/Sil/@x.BlogID" class="btn btn-outline-warning btn-fw btn-icon-text">Sil <i class="zmdi zmdi-arrow-right"></i></a></td>
                   <td><a href="~/Blog/Detaylar/@x.BlogID" class="btn btn-outline-info btn-fw btn-icon-text">Detaylar <i class="zmdi zmdi-arrow-right"></i></a></td>
                  </tr>
               } </tbody>                               
              </table>
            </div> 
            <a href="~/Admin/Ekle" class="btn btn-outline-dark btn-fw btn-icon-text">Blog Ekle</a>
            </div>
            @Html.PagedListPager((IPagedList)Model,page =>Url.Action("BlogListesi", new {page}),new X.PagedList.Web.Common.PagedListRenderOptions{
                  LiElementClasses=new string[] {"page-item"},
                  PageClasses=new string []{"page-link"}
              })
          </div>
        </div>


