@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "MesajOku";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <div class="col-lg-12">
        <div class="card">
           <div class="card-body">
           <div class="card-title">Mesaj Detayları</div>
           <hr>
            <form>
           <div class="form-group">
            <input hidden="hidden" asp-for="ContactID" type="text" class="form-control form-control-rounded" id="input-6" >
           </div>
           <div class="form-group">
            <label asp-for="ContactName">Ad Soyad</label>
            <input type="text" class="form-control form-control-rounded" id="input-7" asp-for="ContactName">
           </div>
           <div class="form-group">
            <label asp-for="ContactMail">Mail</label>
            <input type="text" class="form-control form-control-rounded" id="input-8" asp-for="ContactMail">
           </div>
           <div class="form-group">
            <label asp-for="ContactSubject">Konu</label>
            <input type="text" class="form-control form-control-rounded" id="input-9" asp-for="ContactSubject">
           </div>
           <div class="form-group">
            <label asp-for="ContactDate">Tarih</label>
            <input type="text" class="form-control form-control-rounded" id="input-10"asp-for="ContactDate" >
           </div>
           <div class="form-group">
               <label asp-for="ContactMessage">Mesaj</label>
               <textarea asp-for="ContactMessage" class="form-control form-control-rounded" id="input-10" rows="10"></textarea>
           </div>
          </form>
         </div>
         </div>
      </div>

