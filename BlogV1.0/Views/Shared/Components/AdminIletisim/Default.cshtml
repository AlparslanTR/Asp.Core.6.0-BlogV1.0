@using EntityLayer.Concrete
@model List<Contact>
<div class="tab-pane" id="messages">
                    <div class="alert alert-info alert-dismissible" role="alert">
				   <button type="button" class="close" data-dismiss="alert">&times;</button>
				    <div class="alert-icon">
					 <i class="icon-info"></i>
				    </div>
				    <div class="alert-message">
				      <span><strong>Bilgi!  </strong>Mesajlarınıza Cevap Vermek İçin İlgili Mail Adresine Cevap Yazınız.</span>
				    </div>
                  </div>
                  <div class="table-responsive">
                    <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Ad Soyad</th>
                    <th scope="col">Mail</th>
                    <th scope="col">Konu</th>
                    <th scope="col">Mesaj</th>
                    <th scope="col">Tarih</th>
                    <th scope="col">Detay</th>
                  </tr>
                </thead>
                <tbody>
                    @foreach(var x in Model){
                  <tr>
                    <td>@x.ContactID</td>
                    <td>@x.ContactName</td>
                    <td>@x.ContactMail</td>
                    <td>@x.ContactSubject</td>
                    <td>@x.ContactMessage</td>
                    <td>@x.ContactDate</td>
                    <td><a href="~/Admin/MesajOku/@x.ContactID" class="btn btn-outline-info btn-fw btn-icon-text">Detaylar <i class="zmdi zmdi-arrow-right"></i></a></td> 
                  </tr>
                }</tbody>
              </table>
                  </div>
                </div>